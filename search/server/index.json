{
    "settings": {
      "analysis": {
        "analyzer": {
          "rus_analyzer": {
            "tokenizer": "group_tokenizer",
            "filter": [
              "lowercase",
              "prefix_filter"
            ]
          },
          "keyboard": {
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "prefix_filter"
            ],
            "char_filter": [
              "keyboard_char_filter"
            ]
          },
          "translit": {
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "prefix_filter"
            ],
            "char_filter": [
              "trans_char_filter"
            ]
          }
        },
        "tokenizer": {
          "group_tokenizer": {
            "type": "ngram",
            "min_gram": 2,
            "max_gram": 4,
            "token_chars": [
